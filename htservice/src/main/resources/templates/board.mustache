{{>layout/header}}
<head><link rel="stylesheet" href="css/board_css.css"></head>

<div class="board_wrap">
    <div class="board_title">
        <strong>게시판</strong>
    </div>
    <div class="board_list_wrap">
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th class="num">번호</th>
                <th class="title">제목</th>
                <th class="author">작성자</th>
                <th class="date">작성일</th>
                <th class="count">조회</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#board}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/board/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{createdDate}}</td>
                    <td>{{viewCount}}</td>
                </tr>
            {{/board}}
            </tbody>
        </table>
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link" href="?page={{prev}}">이전</a></li>
            {{#check}}
                <li class="page-item"><a class="page-link" href="?page={{next}}">다음</a></li>
            {{/check}}
            {{^check}}
                <li class="page-item disabled"><a class="page-link" href="?page={{next}}">다음</a></li>
            {{/check}}
        </ul>
        <div class="btn_wrap">
            <a href="/board/save">글쓰기</a>
        </div>
    </div>
</div>

<script src="js/app/boardList.js"></script>
{{>layout/footer}}