{{>layout/header}}

<h1>스프링부트로 시작하는 웹 서비스 Ver.2 게시판</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/board/save" role="button" class="btn btn-primary">글 등록</a>
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver Login</a>
            {{/userName}}
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>등록일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#board}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/board/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/board}}
        </tbody>
    </table>
    <ul class="pagenation justify-content-center">
        <li class="page-item"><a class="page-link" href="?page={{prev}}">이전</a></li>
        {{#check}}
            <li class="page-item"><a class="page-link" href="?page={{next}}">다음</a></li>
        {{/check}}
        {{^check}}
            <li class="page-item disabled"><a class="page-link" href="?page={{next}}">다음</a></li>
        {{/check}}
    </ul>
</div>

{{>layout/footer}}